        <item name="android:letterSpacing">0</item>
    </style>
    
    <!-- Title Styles -->
    <style name="TextAppearance.ReelFocus.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-medium</item>
