<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- M3 Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?android:attr/colorBackground"
            app:title="Settings"
            app:titleTextAppearance="@style/TextAppearance.ReelFocus.TitleLarge"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- SESSIONS Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sessions"
                android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Sessions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Max Sessions Per Day -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Max Sessions Per Day"
                        android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Number of allowed sessions"
                            android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:id="@+id/max_sessions_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textAppearance="@style/TextAppearance.ReelFocus.TitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:minWidth="40dp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/max_sessions_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1"
                        android:valueTo="20"
                        android:value="5"
                        android:stepSize="1"
                        app:labelBehavior="gone"/>

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:dividerColor="?attr/colorOutlineVariant"/>

                    <!-- Session Reset Gap -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Session Reset Gap"
                        android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Time before new session starts"
                            android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:id="@+id/session_gap_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 min"
                            android:textAppearance="@style/TextAppearance.ReelFocus.TitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:minWidth="80dp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/session_gap_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="10"
                        android:valueTo="60"
                        android:value="10"
                        android:stepSize="5"
                        app:labelBehavior="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TIMER LIMITS Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timer Limits"
                android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Timer Limits Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Limit Type -->
                    <LinearLayout
                        android:id="@+id/limit_type_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:minHeight="56dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Toggle limit type">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Limit Type"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time or count based"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/limit_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"
                            android:textColor="?attr/colorPrimary"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:background="@drawable/m3_state_layer_background"/>
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/limit_type_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"/>

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:dividerColor="?attr/colorOutlineVariant"/>

                    <!-- Default Timer Limit -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Default Timer Limit"
                        android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Per session limit value"
                            android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:id="@+id/limit_value_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 min"
                            android:textAppearance="@style/TextAppearance.ReelFocus.TitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:minWidth="80dp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/limit_value_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="5"
                        android:valueTo="60"
                        android:value="20"
                        android:stepSize="5"
                        app:labelBehavior="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- APPEARANCE Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Appearance Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Overlay Position -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overlay Position"
                        android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/position_toggle_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/position_top_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Top"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/position_center_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Center"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/position_bottom_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Bottom"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <Spinner
                        android:id="@+id/overlay_position_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"/>

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:dividerColor="?attr/colorOutlineVariant"/>

                    <!-- Text Size -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Size"
                        android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/text_size_toggle_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_small_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Small"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_medium_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Medium"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_large_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Large"
                            android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"/>

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <Spinner
                        android:id="@+id/text_size_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- APPS Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apps"
                android:textAppearance="@style/TextAppearance.ReelFocus.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Apps Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Manage Apps -->
                    <LinearLayout
                        android:id="@+id/manage_apps_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:minHeight="64dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Manage monitored apps">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_apps"
                            app:tint="?attr/colorPrimary"
                            android:importantForAccessibility="no"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Apps"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select apps to monitor"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:importantForAccessibility="no"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="60dp"
                        app:dividerColor="?attr/colorOutlineVariant"/>

                    <!-- Usage History -->
                    <LinearLayout
                        android:id="@+id/view_history_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:minHeight="64dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="View usage history">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_history"
                            app:tint="?attr/colorPrimary"
                            android:importantForAccessibility="no"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usage History"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyLarge"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View your activity logs"
                                android:textAppearance="@style/TextAppearance.ReelFocus.BodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:importantForAccessibility="no"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
